@model List<Subject>

<div>
    <h2>Generated Timetable</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                @for (int i = 1; i <= Model.Count; i++)
                {
                    <th>Day @i</th>
                }
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Max(s => s.Hours); i++)
            {
                <tr>
                    @for (int j = 0; j < Model.Count; j++)
                    {
                        if (i < Model[j].Hours)
                        {
                            <td>@Model[j].Name</td>
                        }
                        else
                        {
                            <td></td>
                        }
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
